{
  "name": "@folio/cataloging",
  "version": "1.0.0",
  "description": "cataloging",
  "repository": "folio-org/ui-cataloging",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "main": "src/index.js",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://issues.folio.org/projects/CATUI",
    "email": "christian.chiama@atcult.it"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "contributors": [
    {
      "name": "Christian Chiama",
      "email": "christian.chiama@atcult.it",
      "url": "http://www.atcult.it"
    },
    {
      "name": "Natascia Bianchini",
      "email": "natascia.bianchini@atcult.it",
      "url": "http://www.atcult.it"
    },
    {
      "name": "Alice Guercio",
      "email": "alice.guercio@atcult.it",
      "url": "http://www.atcult.it"
    }
  ],
  "scripts": {
    "postinstall": "yarn setup:ci",
    "start": "stripes serve config/js/stripes.config.js",
    "start:vagrant": "stripes serve-vagrant config/js/stripes.config.js",
    "build": "stripes build --output ./dist/ui-cataloging-build",
    "build:analizer": "stripes build config/js/stripes.config.js ./dist/analyze/ui-cataloging-analyze --analyze",
    "test": "stripes test nightmare --run App.spec --show",
    "lint": "eslint --fix src",
    "stylelint": "stylelint \"src/**/*.css\"",
    "setup:ci": ". ./script/ci/setup.sh",
    "prepublish": "node ./config/js/module.descriptor.js package.json > config/json/ModuleDescriptor.json",
    "publish": "yarn publish;npm publish",
    "clean:all": "rimraf node_modules/ dist/ .circleci/"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^1.1.0",
    "babel-eslint": "^8.0.3",
    "eslint": "^4.8.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
  },
  "dependencies": {
    "@folio/stripes-components": "^2.0.0",
    "@folio/stripes-core": "^2.9.0",
    "dotenv": "^5.0.1",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.0",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.1.1",
    "redux-devtools": "^3.4.1",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "peerDependencies": {
    "react": "*"
  },
  "pre-commit": {
    "run": "lint, stylelint"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "post-merge": "clean:all && yarn install",
      "post-rewrite": "yarn install"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
  "stripes": {
    "type": "app",
    "displayName": "cataloging",
    "route": "/cataloging",
    "defaultPopoverSize": "400px",
    "defaultPreviewWidth": "40%",
    "helpPage": "https://wiki.folio.org/pages/",
    "hasSettings": true,
    "okapiInterfaces": {},
    "icons": [
      {
        "name": "app",
        "alt": "Create, view and manage catalog",
        "title": "Cataloging"
      }
    ],
    "permissionSets": [
      {
        "permissionName": "module.cataloging.enabled",
        "displayName": "UI: ui-cataloging module is enabled",
        "visible": true
      },
      {
        "permissionName": "settings.cataloging.enabled",
        "displayName": "Settings (cataloging): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      }
    ]
  }
}

